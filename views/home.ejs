<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar</title>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/home.css">
    <link rel="stylesheet" type="text/css" href="/css/navbar.css">
</head>

<body>
<!-- Nav -->
<header>
    <div class="logo">LOGO</div>
    <nav>
        <ul>
            <li><a href="/home">HOME</a></li>
            <li><a href="/routes">ROUTES</a></li>
            <li><a href="#">GROUPS</a></li>
            <li><a href="/climbers">CLIMBERS</a></li>
            <li class="sub-menu"><a href="#"><i class="fa fa-user-circle-o user-logo" aria-hidden="true"></i></a>
                <ul>
                    <li><a href="/climbers/myprofile">My profile</a></li>
                    <li><a href="/logout">Log out</a></li>
                    <li><a href="#">Item 3</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div class="menu-toggle"><i class="fa fa-bars" aria-hidden="true"></i></div>
</header>

<!-- top div -->
<div class="topContainer bg-img">
    <div class="topContainer-content">
        <h1>A Rock at a Time</h1>
        <h2>Conquer the summit</h2>
        <button class="btn" onclick="showRoutes()">Explore</button>
    </div>
    <div class="align-vertical">
        <div class="project-display-top">
            <% for(let i = 0; i < projects.length; i++) {
                let picture;
                  if (routes[projects[i].FK_RID - 1].picture1 === null) {
                    picture = 'image-not-found.png'
                } else {picture = routes[projects[i].FK_RID - 1].picture1} %>
            <section class="project-box">
                <div class="project-img"><img src="/uploads/<%= picture %>" alt=""></div>
                <div class="project-content">
                    <div class="project-location"><%= routes[projects[i].FK_RID - 1].Name %></div>
                    <div class="project-date"><%= projects[i].Date %></div>
                </div>
            </section>
            <% } %>
        </div>
    </div>
</div>
<div class="align-vertical-mobile">
    <div class="project-display-top">
        <% for(let i = 0; i < projects.length; i++) {
            let picture;
            if (routes[projects[i].FK_RID - 1].picture1 === null) {
                picture = 'image-not-found.png'
            } else {picture = routes[projects[i].FK_RID - 1].picture1} %>
        <section class="project-box">
            <div class="project-img"><img src="/uploads/<%= picture %>" alt=""></div>
            <div class="project-content">
                <div class="project-location"><%= routes[projects[i].FK_RID - 1].Name %></div>
                <div class="project-date"><%= projects[i].Date %></div>
            </div>
        </section>
        <% } %>
    </div>
</div>
<!-- Routes display -->
<div class="horizontal-center">
    <section class="route-box">
        <div class="route-img"><img src="/uploads/<%= routes[2].picture1 %>" alt=""></div>
        <div class="route-content">
            <h3 class="route-title"><%= routes[2].Name %></h3>
            <p class="route-description"><%= routes[2].Description %></p>
        </div>
    </section>

    <section class="route-box">
        <div class="route-content">
            <h3 class="route-title"><%= routes[1].Name %></h3>
            <p class="route-description"><%= routes[1].Description %></p>
        </div>
        <div class="route-img"><img src="/uploads/<%= routes[1].picture1 %>" alt=""></div>
    </section>

    <section class="route-box">
        <div class="route-img"><img src="/uploads/<%= routes[0].picture1 %>" alt=""></div>
        <div class="route-content">
            <h3 class="route-title"><%= routes[0].Name %></h3>
            <p class="route-description"><%= routes[0].Description %></p>
        </div>
    </section>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="/js/navbar.js"></script>
<script src="/js/home.js"></script>
</body>

</html>